<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".LoginActivity"
    tools:showIn="@layout/activity_login"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:layout_height="10dip">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fond"
        android:padding="1dp"
        android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/appmanager" />

    </RelativeLayout>


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:hint="Connexion"
        android:textColor="@color/text"
        android:gravity="center"
        android:textSize="20dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_weight="0.25"
        android:textColor="@color/text"
        android:id="@+id/edit_login"
        android:hint="Nom d'utilisateur"
        android:backgroundTint="@color/hint"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="14sp"
        android:drawablePadding="5dp"
        android:textColorHint="@color/hint"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:state_pressed="true" />

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_weight="0.25"
        android:id="@+id/edit_password"
        android:hint="Mot de passe"
        android:textSize="14sp"
        android:backgroundTint="@color/hint"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/text"
        android:drawablePadding="5dp"
        android:textColorHint="@color/hint"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mot de passe oubliÃ© ?"
        android:textSize="12dp"
        android:layout_weight="0.25"
        android:clickable="true"
        android:gravity="right"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>
    <RelativeLayout
        android:layout_weight="0.7"
        android:layout_width="300dip"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="10dip">
    <Button
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:text="Se Connecter"
        android:textColor="@color/text"
        android:id="@+id/btn_login"
        android:layout_gravity="center_horizontal"
        android:onClick="checkLogin"
        android:background="@drawable/button_custom"
        android:padding="1dp"
        android:scaleType="fitXY"
         />

</RelativeLayout>

<RelativeLayout
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="0.5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/remind"
        android:layout_height="wrap_content"
        android:text="vous n'avez pas de compte ?  "
        android:layout_weight="0.5"
        android:textSize="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="S'inscrire"
        android:textStyle="bold"
        android:layout_weight="0.5"
        android:clickable="true"
        android:layout_alignTop="@+id/remind"
        android:layout_alignLeft="@+id/remind"
        android:layout_alignStart="@+id/remind"
        android:layout_marginLeft="191dp"
        android:layout_marginStart="191dp"
        android:onClick="inscritPage"
        android:layout_alignBottom="@+id/remind" />
</RelativeLayout>
</LinearLayout>




