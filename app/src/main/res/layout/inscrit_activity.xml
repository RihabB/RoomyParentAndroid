<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".InscritActivity">

    <RelativeLayout
        android:layout_weight="30"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:layout_height="10dip">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fond"
            android:padding="1dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/appmanager" />

    </RelativeLayout>

<RelativeLayout
    android:layout_weight="3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="22dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ff"
        android:layout_gravity="left"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:id="@+id/ff"
        android:clickable="true"
        android:onClick="backlogin"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscription"
        android:gravity="center"
      android:layout_marginLeft="130dp"
        android:textSize="25sp"
        android:layout_weight="15"

        android:layout_gravity="center_vertical"

       />

</RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="2">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:ems="10"
            android:id="@+id/nom"
            android:hint="Nom et prenom"
            android:backgroundTint="@color/hint"
            android:textColor="@color/text"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:textColorHint="@color/hint"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_weight="0.15"
            android:id="@+id/login"
            android:hint="Nom d'utilisateur"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:backgroundTint="@color/hint"
            android:layout_marginTop="10dp"
            android:textColor="@color/text"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:textColorHint="@color/hint"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_weight="0.15"
            android:id="@+id/email"
            android:backgroundTint="@color/hint"
            android:hint="Email"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text"
            android:drawablePadding="5dp"
            android:textColorHint="@color/hint"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_weight="0.15"
            android:id="@+id/pwd"
            android:hint="Mot de passe"
            android:backgroundTint="@color/hint"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:drawablePadding="5dp"
            android:textColorHint="@color/hint"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_weight="0.15"
            android:id="@+id/cpwd"
            android:textSize="14sp"
            android:backgroundTint="@color/hint"
            android:hint="Confirmer Mot de passe"
            android:layout_marginTop="10dp"
            android:textColor="@color/text"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:drawablePadding="5dp"
            android:textColorHint="@color/hint"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.15">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:id="@+id/idrobot"
                android:hint="Robot ID"
                android:backgroundTint="@color/hint"
                android:layout_marginTop="10dp"
                android:textColor="@color/text"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:textColorHint="@color/hint"/>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:src="@drawable/drcode"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:clickable="true"
                android:onClick="QRcode"
                android:scaleType="fitXY"
                android:background="#fdfcfc" />

        </RelativeLayout>
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_weight="0.15"
            android:id="@+id/nomrobot"
            android:backgroundTint="@color/hint"
            android:hint="Personnaliser le nom du Robot"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:drawablePadding="5dp"
            android:textColorHint="@color/hint"/>



    </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_weight="10"
        android:layout_width="300dip"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="5dp">



        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Enregistrer"
            android:id="@+id/btn_login"
            android:textColor="@color/text"
            android:layout_gravity="center_horizontal"
            android:onClick="checkInscrit"
            android:background="@drawable/button_custom"
            android:padding="1dp"
            android:scaleType="fitXY"
            />
    </RelativeLayout>

</LinearLayout>
